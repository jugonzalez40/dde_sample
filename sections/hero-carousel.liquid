      class="hero-carousel__image"
      alt="Hero Image 1"
      width="1200"
      height="400"
    >
  </div>
  <div class="hero-carousel__progress" id="HeroCarouselProgress">
    <div class="hero-carousel__progress-bar" data-index="0"></div>
    <div class="hero-carousel__progress-bar" data-index="1"></div>
    <div class="hero-carousel__progress-bar" data-index="2"></div>
    <div class="hero-carousel__progress-bar" data-index="3"></div>
  </div>
</div>
<script src="{{ 'hero-carousel.js' | asset_url }}" defer></script>

